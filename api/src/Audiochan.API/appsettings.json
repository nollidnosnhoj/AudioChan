{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "Database": "[redacted]",
        "IdentityDb": "[redacted]",
        "Redis": "[redacted]"
    },
    "MediaStorageSettings": {
        "Audio": {
            "Bucket": "audiochan-audios",
            "TempBucket": "audiochan-audios-temp",
            "Container": "audios"
        },
        "Image": {
            "Bucket": "audiochan-assets",
            "ValidContentTypes": ["image/jpeg", "image/png", "image/gif"],
            "MaximumFileSize": 2097152
        }
    },
    "IdentitySettings": {
        "UsernameSettings": {
            "MinimumLength": 3,
            "MaximumLength": 20,
            "AllowedCharacters": "abcdefghijklmnopqrstuvwxyz0123456789-_"
        },
        "PasswordSettings": {
            "MinimumLength": 6,
            "RequiresDigit": true,
            "RequiresLowercase": true,
            "RequiresUppercase": true,
            "RequiresNonAlphanumeric": false
        }
    },
    "AmazonS3Settings": {
        "PublicKey": "[redacted]",
        "SecretKey": "[redacted]",
        "Region": "[redacted]"
    },
    "ApplicationSettings": {
        "UploadBucket": "audiochan"
    }
}

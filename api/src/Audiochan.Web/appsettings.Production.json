{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AudiochanDB": "[secret]"
  },
  "AudiochanOptions": {
    "BaseUrl": "",
    "ClientUrl": "",
    "AudioUploadOptions": {
      "FileExtensions": ["mp3", "ogg", "aac"],
      "FileSize": 262144000
    },
    "ImageUploadOptions": {
      "FileExtensions": ["jpg", "jpeg", "png", "gif"],
      "FileSize": 2097152
    }
  },
  "JwtOptions": {
    "Secret": "[secret]",
    "AccessTokenExpiration": "00:15:00",
    "RefreshTokenExpiration": "07:00:00:00"
  },
  "IdentityOptions": {
    "RequireLength": 6,
    "RequireDigit": true,
    "RequireLowercase": true,
    "RequireUppercase": true,
    "RequireNonAlphanumeric": false
  },
  "AmazonS3Options": {
    "Bucket": "audiochan",
    "PublicKey": "[secret]",
    "SecretKey": "[secret]",
    "ChunkThreshold": 5000000,
    "Region": "[secret]"
  }
}

{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Database": "[redacted]",
    "IdentityDb": "[redacted]",
    "Redis": "[redacted]"
  },
  "Cloudflare": {
    "Images": {
      "ApiUrl": "https://api.cloudflare.com/client/v4/accounts/<ACCOUNT_ID>/",
      "ApiKey": "[redacted]",
      "ServeUrl": "https://imagedelivery.net/<ACCOUNT_HASH>/"
    }
  },
  "MediaStorageSettings": {
    "Audio": {
      "Bucket": "tuna-audios",
      "TempBucket": "tuna-audios-temp",
      "Container": "audios"
    },
    "Image": {
      "Bucket": "tuna-assets",
      "ValidContentTypes": [
        "image/jpeg",
        "image/png",
        "image/gif"
      ],
      "MaximumFileSize": 2097152
    }
  },
  "IdentitySettings": {
    "UsernameSettings": {
      "MinimumLength": 3,
      "MaximumLength": 20,
      "AllowedCharacters": "abcdefghijklmnopqrstuvwxyz0123456789-_"
    },
    "PasswordSettings": {
      "MinimumLength": 6,
      "RequiresDigit": true,
      "RequiresLowercase": true,
      "RequiresUppercase": true,
      "RequiresNonAlphanumeric": false
    }
  },
  "AWS": {
    "PublicKey": "[redacted]",
    "SecretKey": "[redacted]",
    "Region": "[redacted]"
  },
  "UploadBucket": "tuna"
}

{
  "extends": ["config:base"],
  "baseBranches": ["staging", "production"],
  "requiredStatusChecks": null,
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "packagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "packagePatterns": ["@types/"],
      "groupName": "@types"
    }
  ]
}